<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".ui.CoachFragment">

    <ImageView
        android:id="@+id/img_coach"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/coach_valerien" /> <TextView
    android:id="@+id/tv_coach_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    tools:text="Valérien Ismaël" />

    <TextView
        android:id="@+id/tv_coach_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        tools:text="Nationality: France" />

</LinearLayout>